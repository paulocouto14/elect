<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/photon.min.css' />
    <link rel='stylesheet' href='/stylesheets/photon.css' />
    <style>
      #formulario{
        margin:15%
      }
      button{
        margin:1%
      }
      footer{
        flex-shrink: 0;
      }

    </style>
  </head>
  <body>
    <header class="toolbar toolbar-header">
      <h1 class="title"><%= title %></h1>
    </header>    
    <section>
      <div id="formulario">
        <form action="/menu" method="get">
          <div class="form-group">
            <h1 class="title">LOGIN</h1>
          </div>
          <div class="form-group">
            <label>E-mail</label>
            <input type="email" name="email" class="form-control" placeholder="Entre com seu e-mail">
          </div>
          <div class="form-group">
            <label>Senha</label>
            <input type="password" name="senha" class="form-control" placeholder="Entre com sua senha">
          </div>
          <button class="btn btn-large btn-default">Entrar</button><button onclick="window.location.href = '/esqueci' " class="btn btn-large btn-default">Esqueci minha senha</button>
        </form>
      </div>
    </section>
    <footer class="toolbar toolbar-footer">
      <h1 class="title">Nome da Empresa</h1>
    </footer>
  </body>
</html>
